@model CosmeticShop.Models.ProductModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="js">
    <section class="blog-single section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-12">
                    <div class="blog-single-main">
                        <div class="row">
                            @if (Model.ErrorCode == 0)
                            {
                                <div class="col-12">
                                    <div class="image">
                                        <img src="@Model.ProductPhoto" alt="#">
                                    </div>
                                    <div class="blog-detail">
                                        <h2 class="blog-title">@Model.ProductName</h2>
                                        <h3 class="blog-title">@Model.ProductPrice TL</h3>
                                        <div class="content">
                                            <p>@Model.ProductDesc</p>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-12">
                                    <h2>@Model.ErrorMessage</h2>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/ End Blog Single -->
</body>