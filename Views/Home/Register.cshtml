@model CosmeticShop.Models.RegisterModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="js">
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="bread-inner">
                        <ul class="bread-list">
                            <li><a href="index1.html">Home<i class="ti-arrow-right"></i></a></li>
                            <li class="active"><a href="blog-single.html">Register</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section id="contact-us" class="contact-us section">
        <div class="container">
            <div class="contact-head">
                <div class="row">
                    <div class="col-lg-6 col-12">
                        <div class="form-main">
                            <div class="title">
                                <h3>Register</h3>
                            </div>
                            @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="row">

                                    <div class=" col-12">
                                        <div class="form-group">
                                            <label>Name<span>*</span></label>
                                            <input name="UserName" type="text" value="@Model.UserName" placeholder="">
                                        </div>
                                    </div>
                                    <div class=" col-12">
                                        <div class="form-group">
                                            <label>Surname<span>*</span></label>
                                            <input name="UserSurname" type="text" value="@Model.UserSurname" placeholder="">
                                        </div>
                                    </div>
                                    <div class=" col-12">
                                        <div class="form-group">
                                            <label>E-mail<span>*</span></label>
                                            <input name="UserEmail" type="text" value="@Model.UserEmail" placeholder="">
                                        </div>
                                    </div>
                                    <div class=" col-12">
                                        <div class="form-group">
                                            <label>Password<span>*</span></label>
                                            <input name="UserPass" type="text" value="@Model.UserPass" placeholder="">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group button">
                                            <button type="submit" class="btn ">Register</button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/ End Contact -->
</body>