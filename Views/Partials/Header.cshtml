@model IEnumerable<CosmeticShop.Models.CategoryModel>
<header class="header shop">
    <div class="middle-inner">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-12">
                    <div class="logo">
                        <a href="/Home"><img src="~/images/shiningstars.png" alt="logo"></a>
                    </div>
                </div>
                <div class="col-lg-8 col-md-7 col-12">
                    <div class="search-bar-top">
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-12">
                    <div class="right-bar">
                        <div class="sinlge-bar">
                            <a href="/Home/Wishlist" class="single-icon"><i class="fa fa-heart-o" aria-hidden="true"></i></a>
                        </div>
                        <div class="sinlge-bar">
                            <a href="/Home/Login" class="single-icon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-inner">
        <div class="container">
            <div class="cat-nav-head">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="all-category">
                            <h3 class="cat-heading"><i class="fa fa-bars" aria-hidden="true"></i>CATEGORIES</h3>
                            <ul class="main-category">
                                @foreach (var item in Model)
                                {
                                    <li><a href="/Home/Category?CatId=@item.CategoryID">@item.CategoryName</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-9 col-12">
                        <div class="menu-area">
                            <nav class="navbar navbar-expand-lg">
                                <div class="navbar-collapse">
                                    <div class="nav-inner">
                                        <ul class="nav main-menu menu navbar-nav">
                                            <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active":"")">@Html.ActionLink("Home", "Index", "Home")</li>
                                            <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Catalog" ? "active":"")">@Html.ActionLink("Catalog", "Catalog", "Home")</li>
                                            <li class="@(ViewContext.RouteData.Values["action"].ToString() == "About" ? "active":"")">@Html.ActionLink("About Us", "About", "Home")</li>
                                            <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Contact" ? "active":"")">@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                                        </ul>
                                    </div>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<section class="hero-slider">
    <div class="single-slider">
    </div>
</section>
